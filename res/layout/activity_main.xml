<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/main_container"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res/org.opendroidphp.app"
        android:orientation="vertical">

    <ScrollView
            android:background="#ffdedede"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/message_container"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="20.0dip">

                <TextView
                        android:textSize="25.0sp"
                        android:textColor="#ff6b9a3e"
                        android:background="@drawable/title_bg"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10.0dip"
                        android:text="@string/message"/>

                <TextView
                        android:textSize="14.0sp"
                        android:textColor="#ffaaaaaa"
                        android:id="@+id/update_msg"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/please_read_me"/>

                <View
                        android:background="#ffdddddd"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"/>


                <Button
                        android:textSize="14.0sp"
                        android:textColor="#ff000000"
                        android:id="@+id/link"
                        android:background="@drawable/btn_dialog"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48.0dip"
                        android:text="@string/more_info"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:background="#ffffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="20.0dip">

                <TextView
                        android:textSize="25.0sp"
                        android:textColor="#ff6b9a3e"
                        android:padding="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/web_server"/>

                <RelativeLayout
                        android:background="#ff999999"
                        android:paddingTop="20.0dip"
                        android:paddingBottom="20.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                    <de.ankri.views.Switch
                            android:enabled="false"
                            android:id="@+id/switch_lighttpd_php"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            app:textOn="@string/running"
                            app:textOff="@string/stopped"/>

                </RelativeLayout>

                <TextView
                        android:textSize="18.0sp"
                        android:paddingLeft="10.0dip"
                        android:paddingTop="10.0dip"
                        android:paddingRight="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lighttpd_php"/>

                <TextView
                        android:textSize="14.0sp"
                        android:textColor="#ffaaaaaa"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:paddingBottom="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lighttpd_php_desc"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

