<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="switch_dark">
        <item name="thumb">@drawable/switch_inner_holo_dark</item>
        <item name="track">@drawable/switch_track_holo_dark</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">12.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearance</item>
        <item name="switchMinWidth">96.0dip</item>
        <item name="switchPadding">16.0dip</item>
    </style>

    <style name="switch_light">
        <item name="thumb">@drawable/switch_inner_holo_light</item>
        <item name="track">@drawable/switch_track_holo_light</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">12.0dip</item>
        <item name="switchTextAppearance">@style/TextAppearance</item>
        <item name="switchMinWidth">96.0dip</item>
        <item name="switchPadding">16.0dip</item>
    </style>

    <style name="TextAppearance">
        <item name="textColor">?android:textColorPrimary</item>
        <item name="textSize">16.0sp</item>
        <item name="textColorHighlight">?android:textColorHighlight</item>
        <item name="textColorHint">?android:textColorHint</item>
        <item name="textColorLink">?android:textColorLink</item>
    </style>

    <style name="AppThemeDark" parent="android:style/Theme.DeviceDefault">
        <item name="switchStyle">@style/switch_dark</item>
        <item name="textAppearance">@style/TextAppearance</item>
    </style>

    <style name="AppThemeLight" parent="android:style/Theme.DeviceDefault.Light">
        <item name="switchStyle">@style/switch_light</item>
        <item name="textAppearance">@style/TextAppearance</item>
    </style>

    <style name="Widget"/>


    <style name="Theme.DroidPHP" parent="@style/Theme.Sherlock.Light">
        <item name="switchStyle">@style/Theme.DroidPHP.Switcher</item>
    </style>

    <style name="Theme.DroidPHP.Switcher">
        <item name="thumb">@drawable/switch_inner_holo_dark</item>
        <item name="track">@drawable/switch_track_holo_dark</item>
        <item name="textOn">@string/textOn</item>
        <item name="textOff">@string/textOff</item>
        <item name="thumbTextPadding">10.0dip</item>
        <item name="switchTextAppearance">@style/Theme.DroidPHP.TextApp</item>
        <item name="switchMinWidth">50.0dip</item>
        <item name="switchPadding">10.0dip</item>
    </style>

    <style name="Theme.DroidPHP.TextApp">
        <item name="textColor">#ffffffff</item>
        <item name="textSize">14.0sp</item>
        <item name="textColorHighlight">?android:textColorHighlight</item>
        <item name="textColorHint">?android:textColorHint</item>
        <item name="textColorLink">?android:textColorLink</item>
    </style>

    <style name="Theme.DroidPHP.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- -->

</resources>
